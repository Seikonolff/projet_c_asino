{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and copy SDL2.dll",
            "type": "shell",
            "command": "",
            "args": [
                "&&", 
                "gcc",
                "-I",
                "${workspaceFolder}/SDL2/include",
                "${workspaceFolder}/main.c",
                "-L",
                "${workspaceFolder}/lib",
                "-lSDL2main",
                "-lSDL2",
                "-o",
                "${workspaceFolder}/main.exe",
                "&&",
                "copy",
                "${workspaceFolder}/lib/SDL2.dll",
                "${workspaceFolder}/"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}
